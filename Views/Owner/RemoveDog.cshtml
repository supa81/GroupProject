@model PawMates.Models.Dog

@{
    ViewData["Title"] = "RemoveDog";
}

<h1>Remove A Dog</h1>

<h4>You are about to remove @Html.DisplayFor(model => model.Name) from your list!</h4>
<h4>Please confirm this is correct. Removing this dog will not allow it to be matched with another dog.</h4>
<div>
    @*<h4>Dog</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Breed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Breed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Temperment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Temperment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerId)
        </dd>
    </dl>
    
    <form asp-action="RemoveDog">
        <input type="hidden" asp-for="DogId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="DogList">Back to List</a>
    </form>
</div>
